<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/myhiber</property>
		<property name="connection.username">root</property>
		<property name="connection.password">beast</property>
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="cache.use_second_level_cache">true</property>
		<property name="cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
		<mapping class="com.hibernate.p1.Student"/>
		<mapping class="com.hibernate.p1.Address"/>
		<mapping class="com.hibernate.p2.Q1"/>
		<mapping class="com.hibernate.p2.A1"/>
		<mapping class="com.hibernate.p2.A2"/>
		<mapping class="com.hibernate.p2.Q2"/>
		<mapping class="com.hibernate.p2.Q3"/>
		<mapping class="com.hibernate.p2.A3"/>
		<mapping resource="com/xml/Person.hbm.xml"/>
	</session-factory>
</hibernate-configuration>